{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "@database/*": [
        "./src/database/"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}