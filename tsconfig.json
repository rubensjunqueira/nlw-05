{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "baseUrl": "./",
    "allowJs": false,
    "paths": {
      "@database/*": [
        "./src/database/*"
      ],
      "@entities/*": [
        "./src/entities/*"
      ],
      "@errors/*": [
        "./src/errors/*"
      ],
      "@repositories/*": [
        "./src/repositories/*"
      ],
      "@DTOs/*": [
        "./src/DTOs/*"
      ]      
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}